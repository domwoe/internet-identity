{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "checkJs": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["node", "jest", "webdriverio/async", "@trust/webcrypto"]
  },
  "include": [
    "src",
    "src/frontend/test-setup.ts",
    "src/**/test.ts",
    "src/**/*.test.ts",
    "src/test-e2e/**/*",
    "src/generated/**/*"
  ],
  "exclude": []
}
