{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": true,
    "lib": ["ES2020", "DOM"],
    "module": "es2020",
    "target": "es2020",
    "moduleResolution": "node",
    "outDir": "dist"
  },
  "include": ["src/frontend/src"],
  "exclude": [
    "src/frontend/src/**/test.ts",
    "src/frontend/src/**/*.test.ts",
    "src/frontend/src/test-e2e/**/*",
    "src/frontend/src/generated/**/*"
  ]
}
